{ 
  "$schema": "https://schemas.wp.org/wp/6.0/theme.json",
  "version": 2,
  "patterns": [
    "header-full-width"
  ],
  "templateParts": [
    {
      "area": "header",
      "name": "header",
      "title": "Header"
    },
    {
      "area": "footer",
      "name": "footer",
      "title": "Footer"
    }
  ],
  "settings": {
    "appearanceTools": true,
    "layout": {
      "contentSize": "920px",
      "wideSize": "1280px"
    },
    "color": {
			"palette": [
				{
					"slug": "base",
					"name": "Base"
				},
				{
					"slug": "contrast",
					"name": "Contrast"
				},
				{
					"slug": "primary",
					"name": "Primary"
				},
				{
					"slug": "secondary",
					"name": "Secondary"
				},
				{
					"slug": "tertiary",
					"name": "Tertiary"
				}
			]
    },
    "typography": {
      "customFontSize": true,
			"dropCap": true,
			"fontStyle": true,
			"fontWeight": true,
			"letterSpacing": true,
			"lineHeight": false,
			"textDecoration": true,
			"textTransform": true,
      "fontFamilies": [
				{
					"name": "Primary",
					"slug": "primary",
					"fontFamily": "'Gotham Rounded', sans-serif",
					"fontFace": [
						{
							"fontFamily": "Gotham Rounded Light",
							"fontWeight": "300 800",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [ "file:./assets/fonts/gotham-rounded-light.otf" ]
            },
            {
							"fontFamily": "Gotham Rounded Light",
							"fontWeight": "300 800",
							"fontStyle": "italic",
							"fontStretch": "normal",
							"src": [ "file:./assets/fonts/gotham-rounded-light-italic.otf" ]
						}
					]
        },
        {
          "name": "Secondary",
					"slug": "secondary",
					"fontFamily": "'Gotham Rounded Bold', sans-serif",
					"fontFace": [
						{
							"fontFamily": "Gotham Rounded Bold",
							"fontWeight": "300 800",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [ "file:./assets/fonts/gotham-rounded-bold.otf" ]
            }
          ]
        }
			]
		}
  }
}